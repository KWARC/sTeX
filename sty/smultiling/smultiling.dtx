% \begin{macro}{\registerlanguage}
%   |\registerlanguage{|\meta{lang}|}{|\meta{babel}|}| registers the |babel| language name
%   \meta{babel} with its ISO 639 languge code \meta{lang} by extending the
%   |\smg@select@language| macro. 
%    \begin{macrocode}
\newcommand\registerlanguage[2]%
{\@ifundefined{smul@#1@loaded}{}{\appto\smg@select@lang%
{\expandafter\ifstrequal\expandafter\thelang{#1}{\selectlanguage{#2}}{}}}}
